<div class="card border-light mb-3">
  <div class="card-header">Fantastic Factories</div>
  <div class="card-body">
    <h5 class="card-title">Welcome to the Puzzle Factory!</h5>
    <p class="card-text">Build your own One Turn Puzzle for Fantastic Factories! Pick the Blueprints, dice values, and starting resources you want.</p>
  </div>

  <label>Show Player Board: {{input type="checkbox" name="board" checked=board}}</label>
  <strong>Blueprints:</strong>

  {{#power-select
    options=blueprintsForDropdown
    onchange=(action addBlueprint)
    as |blueprint|
  }}
    {{blueprint.name}}
  {{/power-select}}
  <strong>Dice:</strong>
  <strong>Resources:</strong>
</div>

{{#if board}}
  <img src="images/Basic-Actions-6.png" />
{{/if}}

<img src="images/cards/Nuclear-Plant.png" />

{{#each selectedBlueprints as |blueprint|}}
  <img src="images/cards/{{blueprint.name}}.png" />
{{/each}}
{{#each cards as |card|}}
{{/each}}

{{yield}}
